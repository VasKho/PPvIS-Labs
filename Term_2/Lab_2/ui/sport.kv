#:import os os
<DialogLoader>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        FileChooserIconView:
            id: filechooser
            path: str(os.getcwd())

        BoxLayout:
            size_hint_y: .1
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)


<DialogSaver>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        FileChooserIconView:
            id: filechooser
            path: str(os.getcwd())
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: .1
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)


<AddNoteDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        BoxLayout:
            orientation: "vertical"
            size_hint_y: .3
            BoxLayout:
                Label:
                    size_hint_x: .2
                    text: "Имя"
                TextInput:
                    id: name
            BoxLayout:
                Label:
                    size_hint_x: .2
                    text: "Состав"
                Spinner:
                    id: cast
                    text: "N\\A"
                    values: ("Основной", "Запасной", "N\\A")
            BoxLayout:
                Label:
                    size_hint_x: .2
                    text: "Позиция"
                TextInput:
                    id: position
            BoxLayout:
                Label:
                    size_hint_x: .2
                    text: "Титул"
                TextInput:
                    id: title
            BoxLayout:
                Label:
                    size_hint_x: .2
                    text: "Вид спорта"
                TextInput:
                    id: sport
            BoxLayout:
                Label:
                    size_hint_x: .2
                    text: "Разряд"
                Spinner:
                    id: rank
                    text: "Нет"
                    values: ("1-й юношеский", "2-й разряд", "3-й разряд", "Кмс", "Мастер спорта", "Нет")

        BoxLayout:
            size_hint_y: .1
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Add"
                on_release: root.add(name.text, cast.text, position.text, title.text, sport.text, rank.text)


<DeleteNoteDialog>:
    content: content
    spinner: tag
    input: choice
    GridLayout:
        id: content
        rows: 1
        pos: (root.x, root.top-root.height/3)
        size_hint_y: .1
        Spinner:
            id: tag
            text: "Имя"
            values: ("Имя", "Состав", "Позиция", "Титул", "Вид спорта", "Разряд")
            on_text: root.modify_input()
        TextInput:
            id: choice
            multiline: False

    GridLayout:
        rows: 1
        pos: (root.x, root.top-root.height)
        size_hint_y: .1
        Button:
            text: "Cancel"
            on_release: root.cancel()

        Button:
            text: "Delete"
            on_release: root.delete(root.spinner.text, root.input.text)


<TableOutlineLabel>:
    # Text properties
    text_size: self.size
    halign: 'center'
    valign: 'middle'
    font_size: 30
    color: (0, 0, 0, 1)
    # Label properties
    size_hint_y: None
    canvas.before:
        Color:
            rgba: (0, 0, 0, 1)
        Line:
            width: 1
            close: True
            rectangle: [self.x, self.y, self.width, self.height]


<TableOutline>:
    cols: 6
    TableOutlineLabel:
        text: 'ФИО спортсмена'
    TableOutlineLabel:
        text: 'Состав (если имеется)'
    TableOutlineLabel:
        text: 'Позиция'
    TableOutlineLabel:
        text: 'Титулы'
    TableOutlineLabel:
        text: 'Вид спорта'
    TableOutlineLabel:
        text: 'Разряд'


<Screen>:
    canvas.before:
        Color:
            rgba: (1, 1, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    ActionBar:
        pos_hint: {'x': 0, 'top': self.height/root.height}
        ActionView:
            ActionPrevious:
                with_previous: False
                app_icon: ''
            ActionButton:
                text: 'Exit'
                on_release: app.stop()
            ActionButton:
                text: 'Open'
                on_release: root.show_load()
            ActionButton:
                text: 'Save As'
                on_release: root.show_save()
            ActionButton:
                text: 'Add'
                on_release: root.show_add()
            ActionButton:
                text: 'Delete'
                on_release: root.show_delete()
